@model ScarpeCo.Models.Product

@{
    ViewData["Title"] = "Dettagli Prodotto";
}

<style>
    body {
        background-color: #CCCCCC;
    }

    .product-details {
        background-color: #FFFFFF;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        padding: 20px;
        max-width: 600px;
        margin: auto;
        margin-top: 20px;
        text-align: center;
    }

    h1 {
        color: #003366;
    }

    p {
        color: #000000;
    }

    a {
        color: #003366;
        text-decoration: none;
        display: block;
        margin-top: 10px;
    }

        a:hover {
            color: #002147;
        }
</style>

<div class="product-details">
    <h1>@Model.Name</h1>
    <p>@Model.Description</p>
    <p>Prezzo: @Model.Price.ToString("C")</p>

    <a asp-action="Index">Torna alla vetrina</a>
</div>
